{
  "name": "@scola/api",
  "version": "5.1.5",
  "description": "Global API",
  "repository": "github:scola84/node-api",
  "author": "M.C. van den Boogaart <scola@kvdb.name>",
  "license": "MIT",
  "main": "./dist/api.js",
  "jsnext:main": "./index.js",
  "dependencies": {
    "@scola/api-cache": "^1.1.0",
    "@scola/api-codec": "^2.1.1",
    "@scola/api-http": "^5.1.1",
    "@scola/api-pubsub": "^1.0.1",
    "@scola/api-router": "^4.1.1",
    "@scola/api-ws": "^6.1.1"
  },
  "devDependencies": {
    "async": "^2.4.0",
    "crypto-js": "^3.1.9-1",
    "lodash-es": "^4.17.4",
    "negotiator": "^0.6.1",
    "path-to-regexp": "^1.7.0",
    "qs": "^6.4.0",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-builtins": "^2.1.1",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "semver": "^5.3.0",
    "uglify-js": "^2.8.23"
  },
  "scripts": {
    "build": "npm run prepare && npm run rollup --",
    "build:dev": "npm run gzip:pre && npm run build -- -w -m",
    "build:min": "npm run build:pub && npm run gzip",
    "build:pub": "npm run build && npm run min && npm run gzip:pre",
    "gzip": "gzip -9 -fkr dist/*",
    "gzip:pre": "find dist/ -name '*.gz' -delete",
    "link": "npm link @scola/api-cache @scola/api-codec @scola/api-http @scola/api-pubsub @scola/api-router @scola/api-ws @scola/error @scola/websocket",
    "min": "uglifyjs dist/api.js -m -o dist/api.min.js",
    "prepare": "mkdir -p dist/ && find dist/ -name '*.map' -delete",
    "prepublish": "npm run build:pub",
    "rollup": "rollup -c"
  }
}
