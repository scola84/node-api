{
  "name": "@scola/api",
  "version": "4.0.3",
  "description": "Global API",
  "repository": "github:scola84/node-api",
  "author": "M.C. van den Boogaart <scola@kvdb.name>",
  "license": "MIT",
  "main": "./dist/api.js",
  "jsnext:main": "index.js",
  "dependencies": {
    "@scola/api-codec": "^1.1.0",
    "@scola/api-http": "^4.1.1",
    "@scola/api-log": "^1.1.0",
    "@scola/api-router": "^3.1.1",
    "@scola/api-ws": "^5.1.1"
  },
  "devDependencies": {
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2",
    "uglify-js": "^2.8.7"
  },
  "scripts": {
    "build": "npm run cleanup && npm run rollup --",
    "build:dev": "npm run build -- -w -m",
    "build:min": "npm run build && npm run min",
    "cleanup": "rm -rf dist",
    "gzip": "gzip -9 -k dist/*",
    "link": "npm link @scola/api-cache @scola/api-codec @scola/api-http @scola/api-pubsub @scola/api-router @scola/api-ws @scola/error @scola/websocket",
    "min": "uglifyjs dist/api.js -m -o dist/api.min.js",
    "prepublish": "npm run build:min",
    "rollup": "rollup -c"
  }
}
